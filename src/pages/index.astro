---

<Layout title="SoleStride - Premium Shoe Store">
  <Header />
  
  <main class="pt-16">
    <Hero />
    
    <!-- Featured Products Section -->
    <section id="products" class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">
            Featured Collection
          </h2>
          <p class="text-xl text-gray-600">
            Discover our hand-picked selection of premium footwear
          </p>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          {products.map(product => (
            <ProductCard 
              name={product.name}
              price={product.price}
              category={product.category}
              image={product.image}
              link={product.link}
            />
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="#" class="px-8 py-4 bg-primary text-white rounded-full font-semibold hover:bg-secondary transition-colors inline-block">
            View All Products
          </a>
        </div>
      </div>
    </section>
    
    <!-- Brand Showcase -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-4">Shop By Brand</h2>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          <div class="aspect-square bg-gray-100 rounded-2xl flex items-center justify-center hover:bg-gray-200 transition-colors cursor-pointer">
            <span class="text-2xl font-bold text-gray-400">NIKE</span>
          </div>
          <div class="aspect-square bg-gray-100 rounded-2xl flex items-center justify-center hover:bg-gray-200 transition-colors cursor-pointer">
            <span class="text-2xl font-bold text-gray-400">ADIDAS</span>
          </div>
          <div class="aspect-square bg-gray-100 rounded-2xl flex items-center justify-center hover:bg-gray-200 transition-colors cursor-pointer">
            <span class="text-2xl font-bold text-gray-400">PUMA</span>
          </div>
          <div class="aspect-square bg-gray-100 rounded-2xl flex items-center justify-center hover:bg-gray-200 transition-colors cursor-pointer">
            <span class="text-2xl font-bold text-gray-400">VANS</span>
          </div>
        </div>
      </div>
    </section>
    
    <Features />
    <Newsletter />
  </main>
  
  <Footer />
</Layout>