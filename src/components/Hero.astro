<section class="relative h-screen flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-secondary/10 via-purple-500/10 to-accent/10"></div>
  
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=1920&q=80" 
      alt="Hero shoe" 
      class="w-full h-full object-cover opacity-20"
    />
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-6xl md:text-8xl font-bold text-primary mb-6 tracking-tight">
      Step Into
      <span class="block text-transparent bg-clip-text bg-gradient-to-r from-secondary to-purple-600">
        The Future
      </span>
    </h1>
    <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-2xl mx-auto">
      Discover the perfect blend of style, comfort, and innovation in every step.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="#products" class="px-8 py-4 bg-secondary text-white rounded-full font-semibold hover:bg-secondary/90 transition-all transform hover:scale-105 shadow-lg">
        Shop Now
      </a>
      <a href="#" class="px-8 py-4 bg-white text-primary rounded-full font-semibold hover:bg-gray-100 transition-all transform hover:scale-105 shadow-lg">
        Explore Collections
      </a>
    </div>
  </div>
  
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>